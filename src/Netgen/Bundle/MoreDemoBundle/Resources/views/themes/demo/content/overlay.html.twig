{% import '@ezdesign/parts/content_fields.html.twig' as content_fields %}

{% set poster_image = content_fields.background_poster(content, 'image', 'i480') %}

<a href="{{ path(location) }}" class="view-type view-type-{{ viewType }} {{ content.contentInfo.contentTypeIdentifier|replace({'_': '-'}) }} vl2">
    {% if poster_image is not empty %}
        <div class="image" style="background-image:url({{ poster_image }});"></div>
    {% endif %}

    <div class="info">
        <h2 class="title">{{ content_fields.name(content) }}</h2>
    </div>
</a>
