{% import '@ezdesign/parts/content_fields.html.twig' as content_fields %}

<div class="view-type view-type-{{ viewType }} ng-blog-post">
    <h3><a href="{{ path(content) }}">{{ ng_render_field(content.fields.title) }}</a></h3>

    <div class="date">
        {{ content.fields.publish_date.value.value|date('j. n. Y.') }}
    </div>

    <div class="author">
        {% if not content.fields.author_override.empty %}
            {{ ng_render_field(content.fields.author_override) }}
        {% else %}
            {{ content.owner.name }}
        {% endif %}
    </div>

    {{ content_fields.image(content, null, 'i320') }}
</div>
