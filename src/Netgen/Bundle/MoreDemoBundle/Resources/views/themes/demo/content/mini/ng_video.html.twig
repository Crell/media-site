{% import '@ezdesign/parts/video.html.twig' as video %}

{% set location_path = path(location) %}

{% if not content.fields.video_file.empty or not content.fields.video_file_hd.empty or not content.fields.video_identifier.empty %}
    <article class="view-type view-type-{{ viewType }} ng-video vl5">
        <figure class="image">
            {{ video.poster(content, location) }}
        </figure>

        <header class="article-header with-icon">
            <a href="{{ location_path }}"><i class="fas fa-play-circle"></i></a>
            <h2 class="title"><a href="{{ location_path }}">{{ ng_render_field(content.fields.title) }}</a></h2>
        </header>
    </article>
{% endif %}
