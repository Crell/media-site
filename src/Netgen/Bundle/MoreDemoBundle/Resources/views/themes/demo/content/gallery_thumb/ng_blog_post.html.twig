{% import '@ezdesign/parts/slide.html.twig' as slide %}

<div class="view-type view-type-{{ viewType }} ng-blog-post vl3  {% if show_details_on_hover %}show_details_on_hover{% endif %}">
    {% if image_type == 'main' %}
        {{ slide.image(content, 'image', 'i1200', true) }}

        {% if show_details %}
            <div class="info">
                <h2 class="title"><a href={{ path(location) }}>{{ ng_render_field(content.fields.title) }}</a></h2>

                <div class="date">
                    {% if not content.fields.authors.empty %}
                        <span class="article-author">
                            {{ ng_render_field(content.fields.authors) }}
                        </span> |
                    {% endif %}
                    {{ content.fields.publish_date.value.value|date('j. n. Y.') }}
                </div>
            </div>
        {% endif %}
    {% elseif image_type == 'thumb' %}
        {{ slide.image(content, 'image', 'i320') }}
    {% endif %}
</div>
