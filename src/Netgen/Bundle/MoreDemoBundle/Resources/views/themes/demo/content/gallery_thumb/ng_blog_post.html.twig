{% import '@ezdesign/parts/slide.html.twig' as slide %}

<div class="view-type view-type-{{ viewType }} ng-blog-post vl2  {% if show_details_on_hover %}show_details_on_hover{% endif %}">
    {% if image_type == 'main' %}
        {{ slide.image( content, 'image', 'i1140', true ) }}

        {% if show_details %}
            <div class="info">
                <h2 class="title"><a href={{ path( location ) }}>{{ ng_render_field( content.fields.title ) }}</a></h2>

                <div class="date">
                    <span class="author">
                        {% if not content.fields.author_override.empty %}
                            {{ ng_render_field( content.fields.author_override ) }}
                        {% else %}
                            {{ ngmore_owner( content ).name }}
                        {% endif %}
                    </span> | {{ content.fields.publish_date.value.value|date( 'j. n. Y.' ) }}
                </div>
            </div>
        {% endif %}
    {% elseif image_type == 'thumb' %}
        {{ slide.image( content, 'image', 'i320') }}
    {% endif %}
</div>
