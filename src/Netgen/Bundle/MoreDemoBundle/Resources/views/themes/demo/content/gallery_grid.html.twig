{% import '@ezdesign/parts/content_fields.html.twig' as content_fields %}

{% if content.hasField('image') and not content.fields.image.empty %}
    <div class="view-type view-type-{{ viewType }} {{ content.contentInfo.contentTypeIdentifier|replace({'_': '-'}) }} vl2">
        {% set title = content_fields.name(content) %}

        <a href="{{ asset(ng_image_alias(content.fields.image, 'i1140').uri) }}" title="{{ title }}" class="js-mfp-item">
            {{ ng_render_field(
                content.fields.image, {
                    parameters: {
                        alias: 'i1140',
                        alt_text: title
                    }
                }
            ) }}
        </a>
    </div>
{% endif %}
