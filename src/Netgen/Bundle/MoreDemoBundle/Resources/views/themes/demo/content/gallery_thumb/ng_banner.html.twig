{% import '@ezdesign/parts/slide.html.twig' as slide %}
{% import "@ezdesign/parts/macros.html.twig" as macros %}

{% block content %}
    <div class="view-type view-type-{{ view_type }} ng-banner vl3 {{ content.fields.css_class.value.text|trim }} {% if show_details_on_hover %}show_details_on_hover{% endif %}">
        {% if image_type == 'main' %}
            {{ slide.image(content, 'image', 'i1200', true) }}

            {% if show_details %}
                <div class="info">
                    <h2 class="title">
                        {{ macros.content_link(content, ng_render_field(content.fields.title)) }}
                    </h2>
                </div>
            {% endif %}
        {% elseif image_type == 'thumb' %}
            {{ slide.image(content, 'image', 'i320') }}
        {% endif %}
    </div>
{% endblock %}
