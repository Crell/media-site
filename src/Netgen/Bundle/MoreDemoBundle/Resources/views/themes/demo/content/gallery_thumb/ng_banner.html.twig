{% extends '@ezdesign/parts/linkable.html.twig' %}

{% import '@ezdesign/parts/slide.html.twig' as slide %}

{% block content %}
    <div class="view-type view-type-{{ viewType }} ng-banner vl2 {{ content.fields.css_class.value.text|trim }} {% if show_details_on_hover %}show_details_on_hover{% endif %}">">
        {% if image_type == 'main' %}
            {{ slide.image(content, 'image', 'i1140', true) }}

            {% if show_details %}
                <div class="info">
                    <h2 class="title">
                        <a href="{{ url }}" {% if open_in_new_window %} target="_blank" rel="noopener noreferrer" {% endif %}>
                            {{ ng_render_field(content.fields.title) }}
                        </a>
                    </h2>
                </div>
            {% endif %}
        {% elseif image_type == 'thumb' %}
            {{ slide.image(content, 'image', 'i320') }}
        {% endif %}
    </div>
{% endblock %}
