<div class="view-type view-type-{{ viewType }} ng-audio vl3 clearfix">
    <div class="info">
        <h2 class="title with-icon">
            <a href="{{ path(location) }}">
                <i class="fas fa-volume-up"></i>{{ ng_render_field(content.fields.title) }}
            </a>
        </h2>

        {% if not content.fields.line_intro.empty %}
            <div class="short">
                {{ ng_render_field(content.fields.line_intro) }}
            </div>
        {% endif %}
    </div>
</div>
