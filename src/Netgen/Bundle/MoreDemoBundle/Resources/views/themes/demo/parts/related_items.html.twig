{% if related_items|length > 0 %}
    {% for related_item in related_items %}
        {{ render(
            controller(
                'ng_content:viewAction', {
                    'contentId': related_item.contentId,
                    'locationId': related_item.id,
                    'viewType': view_type,
                    'params': {
                        'location': related_item
                    }
                }
            )
        ) }}
    {% endfor %}
{% endif %}
