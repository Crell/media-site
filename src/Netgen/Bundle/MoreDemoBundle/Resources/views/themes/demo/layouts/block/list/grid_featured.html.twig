{% extends '@NetgenBlockManager/block/block.html.twig' %}

{% block content %}
    {% if collections.default is defined %}
        <div class="grid-featured">
            <div class="main-item">
                {% if collections.default.0 is defined %}
                   {{ ngbm_render_item(collections.default.0.item, block.itemViewType) }}
                {% endif %}
            </div>

            <div class="secondary-items">
                {% if collections.default.1 is defined %}
                    <div class="secondary-item">
                        {{ ngbm_render_item(collections.default.1.item, block.itemViewType) }}
                    </div>
                {% endif %}

                {% if collections.default.2 is defined %}
                    <div class="secondary-item">
                        {{ ngbm_render_item(collections.default.2.item, block.itemViewType) }}
                    </div>
                {% endif %}
            </div>
        </div>
    {% endif %}
{% endblock %}
