{% import '@ezdesign/parts/content_fields.html.twig' as content_fields %}

<div class="view-type view-type-{{ view_type }} ng-blog-post vl clearfix">

    {{ content_fields.image(content, location) }}

    <div class="info">
        <div class="date">
            <span class="author">
                {% if not content.fields.author_override.empty %}
                    {{ ng_render_field(content.fields.author_override) }}
                {% else %}
                    {{ content.owner.name }}
                {% endif %}
            </span> | {{ content.fields.publish_date.value.value|date('F j, Y.') }}
        </div>
        <h2 class="title"><a href="{{ path(location) }}">{{ content_fields.title }}</a></h2>
        {{ content_fields.intro(content) }}
    </div>
</div>
