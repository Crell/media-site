{% import "@ezdesign/parts/macros.html.twig" as macros %}

{% block content %}
<div class="view-type view-type-{{ view_type }} ng-banner vl clearfix">

    {% if not content.fields.image.empty %}
        <div class="image">
            {{ macros.image_link(content.fields.image, 'i480') }}
        </div>
    {% endif %}

    <div class="info">
	    <h2 class="title">
            {{ macros.content_link(content, ng_render_field(content.fields.title)) }}
        </h2>

        <div class="short">
            {{ ng_render_field(content.fields.short_description) }}
        </div>
	</div>
</div>
{% endblock %}
