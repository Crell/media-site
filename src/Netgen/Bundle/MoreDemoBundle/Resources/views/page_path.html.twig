{% if showPath is not defined %}
    {% set showPath = true %}
{% endif %}

{% if showPath and pathArray|length > 1 %}
    <div class="breadcrumb-wrapper">
        <div class="container">
            <ol class="breadcrumb">
                {% for pathItem in pathArray %}
                    {% if pathItem.url != false %}
                        <li><a href="{{ pathItem.url }}">{{ pathItem.text }}</a></li>
                    {% endif %}
                {% endfor %}
            </ol>
        </div>
    </div>
{% endif %}
