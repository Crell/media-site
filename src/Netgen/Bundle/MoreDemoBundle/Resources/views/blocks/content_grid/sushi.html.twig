{% extends 'NetgenMoreDemoBundle:blocks/content_grid:block_view.html.twig' %}

{% block block_items %}
    <div class="sushiSwiper swiper-container">
        <div class="swiper-wrapper">
            {% for valid_item in valid_items %}
                <div class="swiper-slide">
                    {{ render(
                        controller(
                            'ez_content:viewLocation', {
                                'locationId': valid_item.locationId,
                                'viewType': 'block_item',
                                'params': {
                                    'alias_name': 'contentgrid',
                                    'view_type': block.customAttributes.advanced_block_item_viewtype
                                }
                            }
                        )
                    ) }}
                </div>
            {% endfor %}
        </div>

        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>
{% endblock %}
