<div class="row">
    {% for valid_item in valid_items %}
        <div class="col-sm-6">
            {{ render(
                controller(
                    'ez_content:viewLocation', {
                        'locationId': valid_item.locationId,
                        'viewType': block.customAttributes.advanced_block_item_view_type
                    }
                )
            ) }}
        </div>
        {% if loop.index0 % 2 == 1 %}<div class="clearfix hidden-xs-block"></div>{% endif %}
    {% endfor %}
</div>
