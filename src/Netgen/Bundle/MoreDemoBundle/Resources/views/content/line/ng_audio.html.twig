<div class="view-type view-type-{{ viewType }} ng-audio vl t2 clearfix">
    <div class="info">
        <h2 class="title with-icon"><a href="{{ path( location ) }}"><i class="fa fa-volume-up"></i>{{ ez_render_field( content, 'title' ) }}</a></h2>

        {% if not ez_is_field_empty( content, 'line_intro' ) %}
            <div class="short">
                {{ ez_render_field( content, 'line_intro' ) }}
            </div>
        {% endif %}
    </div>
</div>
