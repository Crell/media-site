<div class="view-type view-type-{{ viewType }} image clearfix">

    <h2>{{ ez_content_name( content ) }}</h2>

    <div class="image">
        <p>{{ ez_render_field( content, 'image', { 'parameters': { 'alias': 'i320' } } ) }}</p>
    </div>

    {% if not ez_is_field_empty( content, 'caption' ) %}
        <div class="caption">
            {{ ez_render_field( content, 'caption' ) }}
        </div>
    {% endif %}

</div>
