<div class="view-type view-type-{{ viewType }} ng-category-page clearfix">

    <h2 class="title"><a href="{{ path( location ) }}">{{ ez_content_name( content ) }}</a></h2>

    {% if not ez_is_field_empty( content, 'line_intro' ) %}
        <div class="short">
            {{ ez_render_field( content, 'line_intro' ) }}
        </div>
    {% endif %}

</div>
