<div class="view-type view-type-{{ viewType }} image vl clearfix">
	<div class="image">
	    {{ ng_render_field(
	        content.fields.image, {
	            parameters: {
	                alias: 'i480',
	                alt_text: content.fields.name.value.text,
	                link_href: path( location )
	            }
	        }
	    ) }}
	</div>
    <div class="info">
        <h2 class="title"><a href="{{ path( location ) }}">{{ ng_render_field( content.fields.name ) }}</a></h2>
    </div>
</div>
