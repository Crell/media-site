{% extends 'NetgenMoreDemoBundle:parts:linkable.html.twig' %}

{% block content %}
    <div class="view-type view-type-{{ viewType }} ng-shortcut clearfix">
        <h2 class="title"><a href="{{ url }}">{{ ez_render_field( content, 'title' ) }}</a></h2>

        {% if not ez_is_field_empty( content, 'line_image' ) %}
            {{ ez_render_field(
                content,
                'line_image', {
                    'parameters': {
                        'alias': 'i480',
                        'link_href': url
                    }
                }
            ) }}
        {% endif %}

        {% if not ez_is_field_empty( content, 'line_intro' ) %}
            <div class="short">{{ ez_render_field( content, 'line_intro' ) }}</div>
        {% endif %}
    </div>
{% endblock %}
