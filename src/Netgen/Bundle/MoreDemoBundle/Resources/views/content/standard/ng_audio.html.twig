{% set location_path = path( location ) %}

<div class="content-view-block-item view-type-{{ viewType|default( '' ) }} ng-audio">

    {% if not ez_is_field_empty( content, 'image' ) %}
        <div class="att-image">
            {{ ez_render_field( content, 'image' ) }}
        </div>
    {% endif %}

    <h2 class="att-title"><a href="{{ location_path }}">{{ ez_render_field( content, 'name' ) }}</a></h2>

</div>
