{% set location_path = path( location ) %}

<div class="view-type view-type-{{ viewType }} {{ ngmore_content_type_identifier( content.contentInfo.contentTypeId )|replace( { '_': '-' } ) }} vl t1 clearfix">

    {% if content.fields.image is defined and not ez_is_field_empty( content, 'image' ) %}
        <div class="image">
            {{ ez_render_field(
                content,
                'image', {
                    'parameters': {
                        'alias': 'i320',
                        'image_class': 'img-responsive',
                        'link_href': location_path
                    }
                }
            ) }}
        </div>
    {% endif %}

    <div class="info">
        <h2 class="title"><a href="{{ location_path }}">{{ ez_content_name( content ) }}</a></h2>
    </div>

</div>
