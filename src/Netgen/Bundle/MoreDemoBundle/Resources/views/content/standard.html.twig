{% set location_path = path( location ) %}

{% block content %}
    <div class="content-view-block-item view-type-{{ viewType|default( '' ) }} {{ ngmore_content_type_identifier( content.contentInfo.contentTypeId ) }} vl">

        {% if content.fields.image is defined and not ez_is_field_empty( content, 'image' ) %}
            <div class="att-image image">
                {{ ez_render_field(
                    content,
                    'image', {
                        'parameters': {
                            'alias': 'i320',
                            'image_class': 'img-responsive',
                            'link_href': location_path
                        }
                    }
                ) }}
            </div>
        {% endif %}

        <div class="info">
            <h2 class="att-title title"><a href="{{ location_path }}">{{ ez_content_name( content ) }}</a></h2>
        </div>

    </div>
{% endblock %}
