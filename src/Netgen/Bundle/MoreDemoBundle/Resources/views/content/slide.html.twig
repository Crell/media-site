{% import 'NetgenMoreDemoBundle:parts:slide.html.twig' as slide %}
{% import 'NetgenMoreDemoBundle:parts:content_fields.html.twig' as content_fields %}

<div class="view-type view-type-{{ viewType }} {{ ngmore_content_type_identifier( content.contentInfo.contentTypeId )|replace( { '_': '-' } ) }} vl2">
    {{ slide.image( content, 'image', alias_name|default( 'i1140' ) ) }}

    <div class="info">
        <h2 class="title"><a href={{ path( location ) }}>{{ content_fields.name( content ) }}</a></h2>
    </div>
</div>
