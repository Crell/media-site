{% import 'NetgenMoreDemoBundle:parts:content.html.twig' as content %}

<div class="view-type view-type-{{ viewType }} ng-news vl t3 clearfix">

    {{ content.image( content, location ) }}

    <div class="info">
        <div class="date">
            {{ ez_field_value( content, 'publish_date' ).value|date( 'j. n. Y.' ) }}
        </div>
        <h2 class="title"><a href="{{ path( location ) }}">{{ content.name( content ) }}</a></h2>
    </div>
</div>
