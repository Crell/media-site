{% extends "NetgenMoreDemoBundle:content:mini.html.twig" %}

{% import 'NetgenMoreDemoBundle:parts:video.html.twig' as video %}

{% set content_name = ez_field_value( content, 'name' ).text %}

{% block image %}
<div class="image">
    {{ video.poster( content, location ) }}
</div>
{% endblock %}

{% block info %}
<div class="info with-icon">
    <a href="{{ location_path }}"><i class="fa fa-play-circle"></i></a>
    <h2 class="title"><a href="{{ location_path }}">{{ content_name }}</a></h2>
</div>
{% endblock %}
