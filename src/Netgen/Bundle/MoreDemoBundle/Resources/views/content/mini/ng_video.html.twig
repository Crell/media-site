{% import 'NetgenMoreDemoBundle:parts:video.html.twig' as video %}

{% set location_path = path( location ) %}

{% if not ez_is_field_empty( content, 'video_file' ) or not ez_is_field_empty( content, 'video_file_hd' ) or not ez_is_field_empty( content, 'video_identifier' ) %}
    <div class="view-type view-type-{{ viewType }} ng-video vl t3 clearfix">
        <div class="image">
            {{ video.poster( content, location ) }}
        </div>

        <div class="info with-icon">
            <a href="{{ location_path }}"><i class="fa fa-play-circle"></i></a>
            <h2 class="title"><a href="{{ location_path }}">{{ ez_render_field( content, 'title' ) }}</a></h2>
        </div>
    </div>
{% endif %}
