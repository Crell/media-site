{% extends "NetgenMoreDemoBundle:content:slide.html.twig" %}

{% import "NetgenMoreDemoBundle:parts:video.html.twig" as video %}

{% set content_name = ez_field_value( content, 'name' ).text %}

{% block image %}
{{ video.poster_slide( content, use_lazy_load|default( false ) ) }}
{% endblock %}

{% block info %}
<div class="info">
    <h2 class="title"><a href={{ path( location ) }}><i class="fa fa-play-circle"></i>{{ content_name }}</a></h2>
</div>
{% endblock %}
