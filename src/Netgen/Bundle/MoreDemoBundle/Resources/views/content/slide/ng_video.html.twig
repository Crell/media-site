{% import "@NetgenMoreDemo/parts/video.html.twig" as video %}

{% if not content.fields.video_file.empty or not content.fields.video_file_hd.empty or not content.fields.video_identifier.empty %}
    <div class="view-type view-type-{{ viewType }} ng-video vl2">
        {{ video.poster_slide( content, use_lazy_load|default( false ) ) }}

        <div class="info">
            <h2 class="title"><a href={{ path( location ) }}><i class="fa fa-play-circle"></i>{{ content.fields.title.value.text }}</a></h2>
        </div>
    </div>
{% endif %}
