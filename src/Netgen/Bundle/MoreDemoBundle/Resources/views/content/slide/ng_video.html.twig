{% import "NetgenMoreDemoBundle:parts:video.html.twig" as video %}

{% if not ez_is_field_empty( content, 'video_file' ) or not ez_is_field_empty( content, 'video_file_hd' ) or not ez_is_field_empty( content, 'video_identifier' ) %}
    <div class="content-view-block-item view-type-{{ viewType|default( '' ) }} ng-video vl2">
        {{ video.poster_slide( content, use_lazy_load|default( false ) ) }}

        <div class="info">
            <h2 class="title"><a href={{ path( location ) }}><i class="fa fa-play-circle"></i>{{ ez_field_value( content, 'name' ).text }}</a></h2>
        </div>
    </div>
{% endif %}
