{% import 'NetgenMoreDemoBundle:parts:slide.html.twig' as slide %}

<div class="view-type view-type-{{ viewType }} ng-blog-post vl2">
    {{ slide.image( content, 'image', alias_name|default( 'i1140' ) ) }}

    <div class="info">
        <h2 class="title"><a href={{ path( location ) }}>{{ ez_render_field( content, 'title' ) }}</a></h2>

        <div class="author">
            <span class="author">
                {% if not ez_is_field_empty( content, 'author_override' ) %}
                    {{ ez_render_field( content, 'author_override' ) }}
                {% else %}
                    {{ ez_content_name( ngmore_owner( content ) ) }}
                {% endif %}
            </span>
            <span class="date">{{ ez_field_value( content, 'publish_date' ).value|date( 'j. n. Y.' ) }}</span>
        </div>

    </div>
</div>
