{% import '@NetgenMoreDemo/parts/slide.html.twig' as slide %}

<div class="view-type view-type-{{ viewType }} ng-blog-post vl2">
    {{ slide.image( content ) }}

    <div class="info">
        <h2 class="title"><a href={{ path( location ) }}>{{ ng_render_field( content.fields.title ) }}</a></h2>

        <div class="date">
            <span class="author">
                {% if not content.fields.author_override.empty %}
                    {{ ng_render_field( content.fields.author_override ) }}
                {% else %}
                    {{ ngmore_owner( content ).name }}
                {% endif %}
            </span> | {{ content.fields.publish_date.value.value|date( 'j. n. Y.' ) }}
        </div>
    </div>
</div>
