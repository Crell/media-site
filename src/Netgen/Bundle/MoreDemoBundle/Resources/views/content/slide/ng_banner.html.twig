{% extends 'NetgenMoreDemoBundle:parts:linkable.html.twig' %}

{% import 'NetgenMoreDemoBundle:parts:slide.html.twig' as slide %}

{% block content %}
    <div class="view-type view-type-{{ viewType }} ng-banner vl2{% if not content.fields.css_class.empty %} {{ content.fields.css_class.value.text }}{% endif %}">
        {{ slide.image( content ) }}

        <div class="info">
            <h2 class="title"><a href="{{ url }}" {% if open_in_new_window %} target="_blank" {% endif %}>{{ ng_render_field( content.fields.title ) }}</a></h2>
        </div>
    </div>
{% endblock %}
