{% extends 'NetgenMoreDemoBundle:parts:linkable.html.twig' %}

{% import 'NetgenMoreDemoBundle:parts:slide.html.twig' as slide %}

{% block content %}
    <div class="view-type view-type-{{ viewType }} ng-banner vl2{% if not ez_is_field_empty( content, 'css_class' ) %} {{ ez_field_value( content, 'css_class' ).text }}{% endif %}">
        {{ slide.image( content, 'image', alias_name|default( 'i1140' ) ) }}

        <div class="info">
            <h2 class="title"><a href="{{ url }}" {% if open_in_new_window %} target="_blank" {% endif %}>{{ ez_render_field( content, 'title' ) }}</a></h2>
        </div>
    </div>
{% endblock %}
