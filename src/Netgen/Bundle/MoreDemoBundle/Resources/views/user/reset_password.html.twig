{% extends 'NetgenMoreBundle::pagelayout_resolver.html.twig' %}

{% trans_default_domain "ngmore_user" %}

{% block content %}
    <div class="row">
        <div class="reset-password">
            <div class="login-box">
                <div class="page-header">
                    <h1 class="title">{{ 'ngmore.user.reset_password.title'|trans }}</h1>
                </div>

                {% if form is defined %}

                    <div class="form">
                        {{ form_start( form, { 'attr': { 'class': 'form-horizontal' } } ) }}

                        {{ form_row( form.password.first, { 'label': 'ngmore.user.reset_password.first.label', 'attr': { 'class': 'input-large col-xs-12' } } ) }}
                        {{ form_row( form.password.second, { 'label': 'ngmore.user.reset_password.second.label', 'attr': { 'class': 'input-large col-xs-12' } } ) }}

                        <input type="submit" value="{{ 'ngmore.user.reset_password.submit_label'|trans }}" class="btn btn-primary col-xs-12" />

                        {{ form_end( form ) }}
                    </div>

                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}
