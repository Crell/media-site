{% extends ezpublish.configResolver.parameter('pagelayout') %}

{% trans_default_domain "ngmore_user" %}

{% block content %}
    <div class="page-header">
        <h1>{{ 'ngmore.user.reset_password.title'|trans }}</h1>
    </div>

    <p>{{ "ngmore.user.reset_password.text"|trans }}</p>

    {{ form_start( form ) }}

    <fieldset>
        <div class="form-group">
            {{ form_row( form.password.first, { 'label': 'ngmore.user.reset_password.first.label', 'attr': { 'class': 'form-control' } } ) }}
        </div>

        <div class="form-group">
            {{ form_row( form.password.second, { 'label': 'ngmore.user.reset_password.second.label', 'attr': { 'class': 'form-control' } } ) }}
        </div>

        <button type="submit" class="btn btn-primary">{{ 'ngmore.user.reset_password.submit'|trans }}</button>
    </fieldset>

    {{ form_end( form ) }}
{% endblock %}
