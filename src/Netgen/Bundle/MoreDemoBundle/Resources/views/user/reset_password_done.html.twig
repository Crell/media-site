{% extends 'NetgenMoreBundle::pagelayout_resolver.html.twig' %}

{% trans_default_domain "ngmore_user" %}

{% block content %}
    <div class="row">
        <div class="reset-password">

            <div class="page-header">
                <h1 class="title">{{ 'ngmore.user.reset_password.title'|trans }}</h1>
            </div>

            {% if successMessage is defined and successMessage is not empty %}

                <div class="alert">
                    {{ successMessage|raw }}
                </div>

            {% elseif errorMessage is defined and errorMessage is not empty %}

                <div class="alert alert-danger">
                    <p><strong>{{ errorMessage|raw }}</strong></p>
                </div>

            {% endif %}

        </div>
    </div>
{% endblock %}
