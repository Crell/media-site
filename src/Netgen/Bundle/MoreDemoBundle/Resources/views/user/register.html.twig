{% extends 'NetgenMoreBundle::pagelayout_resolver.html.twig' %}

{% trans_default_domain "ngmore_user" %}

{% block content %}
    <div class="row">
        <div class="register-user">
            <div class="login-box">
                <div class="page-header">
                    <h1 class="title">{{ 'ngmore.user.register.title'|trans }}</h1>
                </div>

                {% if errorMessage is defined and errorMessage is not empty %}
                    <div class="alert alert-danger">
                        <p><strong>{{ errorMessage|raw }}</strong></p>
                    </div>
                {% endif %}

                {% if form is defined %}
                    <div class="form">

                        {{ form_start( form, { 'attr': { 'class': 'form-horizontal' } } ) }}

                        {% for form_child in form.children %}
                            {% if form_child == form.save %}
                                {{ form_row( form_child, { 'attr': { 'class': 'btn btn-primary col-xs-12' } } ) }}
                            {% else %}
                                {{ form_row( form_child, { 'attr': { 'class': 'input-large col-xs-12' } } ) }}
                            {% endif %}
                        {% endfor %}

                        {{ form_end( form ) }}

                    </div>
                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}