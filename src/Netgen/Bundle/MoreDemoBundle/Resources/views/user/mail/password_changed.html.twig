<p>
    {{ "ngmore.user.mail.changed_password.body"|trans }}
</p>

<p>{{ "ngmore.user.mail.account_information"|trans }}<br/>
    {{ "ngmore.user.mail.username"|trans }}: {{ user.login }}<br/>
    {{ "ngmore.user.mail.email"|trans }}: {{ user.email }}<br/>
</p>

{% if return_url is defined and return_url is not empty %}
    <p><a href="{{ return_url }}">{{ return_url }}</a></p>
{% else %}
    <p><a href="{{ base_url }}">{{ site_name }}</a></p>
{% endif %}