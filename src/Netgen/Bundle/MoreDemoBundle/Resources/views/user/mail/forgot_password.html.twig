{% extends 'NetgenMoreDemoBundle:user/mail:layout.html.twig' %}

{% trans_default_domain "ngmore_user" %}

{% block title %}
    {{ "ngmore.user.forgotten_password.mail.title"|trans }}
{% endblock %}

{% block content %}
    {{ "ngmore.user.mail.account_information"|trans }}

    <br>

    {{ "ngmore.user.mail.username"|trans }}: {{ user.login }}

    <br>

    {{ "ngmore.user.mail.email"|trans }}: {{ user.email }}

    <br><br>

    {{ "ngmore.user.forgotten_password.mail.text"|trans }} <a href="{{ url('ngmore_user_reset_password', { hash: hash }) }}">{{ url('ngmore_user_reset_password', { hash: hash }) }}</a>
{% endblock %}
