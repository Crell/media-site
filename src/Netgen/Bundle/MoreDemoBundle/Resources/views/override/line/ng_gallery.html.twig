{# NG gallery - line view #}

<div class="content-view-line ng-gallery vl t2 clearfix">
    <div class="info">
        <h2 class="att-title title"><a href="{{ path( location ) }}">{{ ez_content_name( content ) }}</a></h2>
        {% if not ez_is_field_empty( content, 'line_intro' ) %}
            <div class="att-line-intro short">
                {{ ez_render_field( content, 'line_intro' ) }}
            </div>
        {% endif %}
    </div>
</div>
