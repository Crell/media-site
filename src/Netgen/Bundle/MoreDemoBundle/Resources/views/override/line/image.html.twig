{# Image - line view #}

<div class="content-view-line image">

    <h2>{{ ez_content_name( content ) }}</h2>

    <div class="att-image">
        <p>{{ ez_render_field( content, 'image', { 'parameters': { 'alias': 'small' } } ) }}</p>
    </div>

    {% if not ez_is_field_empty( content, 'caption' ) %}
        <div class="att-caption">
            {{ ez_render_field( content, 'caption' ) }}
        </div>
    {% endif %}

</div>
