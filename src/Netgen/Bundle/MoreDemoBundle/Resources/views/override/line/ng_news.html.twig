{# NG news - line view #}

{% set location_path = path( location ) %}

<div class="content-view-line ng-news media clearfix">

    {% if not ez_is_field_empty( content, 'headline' ) %}
        <h3 class="att-headline">{{ ez_render_field( content, 'headline' ) }}</h3>
    {% endif %}

    <h2 class="att-title"><a href="{{ location_path }}">{{ ez_render_field( content, 'title' ) }}</a></h2>

    {% if not ez_is_field_empty( content, 'line_image' ) %}
        {{ ez_render_field(
            content,
            'line_image', {
                'parameters': {
                    'alias': 'ng_image_line',
                    'link_class': 'att-image pull-left',
                    'href': location_path
                }
            }
        ) }}
    {% elseif not ez_is_field_empty( content, 'image' ) %}
        {{ ez_render_field(
            content,
            'image', {
                'parameters': {
                    'alias': 'ng_image_line',
                    'link_class': 'att-image pull-left',
                    'href': location_path
                }
            }
        ) }}
    {% endif %}

    <div class="att-publish-date">
        {{ ez_field_value( content, 'publish_date' ).value|date( 'j. n. Y.' ) }}
    </div>

    {% if not ez_is_field_empty( content, 'line_intro' ) %}
        <div class="att-line-intro">
            {{ ez_render_field( content, 'line_intro' ) }}
        </div>
    {% elseif not ez_is_field_empty( content, 'full_intro' ) %}
        <div class="att-line-intro">
            {{ ez_render_field( content, 'full_intro' ) }}
        </div>
    {% endif %}

</div>
