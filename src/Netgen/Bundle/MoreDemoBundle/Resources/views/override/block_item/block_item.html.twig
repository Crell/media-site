{% set view_type = view_type|default( 'default' ) %}
{% set content_type_identifier = ngmore_content_type_identifier( content.contentInfo.contentTypeId ) %}

{% include [
        'NetgenMoreDemoBundle:block_item_view_types/' ~ content_type_identifier ~ ':' ~ view_type ~ '.html.twig',
        'NetgenMoreDemoBundle:block_item_view_types/' ~ content_type_identifier ~ ':default.html.twig'
    ] ignore missing
    with {
        'location': location is defined and location is not empty ? location : false,
        'content': content
    }
%}
