{% if block.customAttributes.parent_node is defined and block.customAttributes.parent_node > 0 %}
    {% if valid_items|length > 0 %}
        {% include
            'NetgenMoreDemoBundle:parts/block_views:' ~ block.view ~ '.html.twig' ignore missing
             with {
                'valid_items': valid_items,
                'block_type': 'content-grid',
                'block': block
            }
        %}
    {% endif %}
{% endif %}
