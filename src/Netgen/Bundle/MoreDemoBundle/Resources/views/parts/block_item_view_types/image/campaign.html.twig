{# image - block_item campaign view type #}

{% set image_field = content.getField( 'image' ) %}
{% set image_alias = ez_image_alias( image_field, content.versionInfo, alias_name|default( 'original' ) ) %}

<div class="rsContent">
    <img class="rsImg rsMainSlideImage" src="{% if image_alias %}{{ image_alias.uri }}{% else %}//:0{% endif %}" alt="{{ ez_content_name( content ) }}" />
</div>
