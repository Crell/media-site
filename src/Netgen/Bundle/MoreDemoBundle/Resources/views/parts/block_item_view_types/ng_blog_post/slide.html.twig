{# ng_blog_post - block_item slide view type #}

{% extends 'NetgenMoreDemoBundle:parts/block_item_view_types:block_item.html.twig' %}

{% set content_name = ez_content_name( content ) %}
{% set image_alias = ez_image_alias( ngmore_field( content, 'image' ), content.versionInfo, 'i1140' ) %}

{% block content %}
    <div class="content-view-block-item view-type-{{ view_type|default( '' ) }} ng-blog-post vl2">
        {% include 'NetgenMoreDemoBundle:parts/block_item_view_types:slide.html.twig' %}

        <div class="info">
            <h2 class="title"><a href={{ location_path }}>{{ content_name }}</a></h2>

            <div class="att-author">
                By
                <span class="author">
                    {% if not ez_is_field_empty( content, 'author_override' ) %}
                        {{ ez_render_field( content, 'author_override' ) }}
                    {% else %}
                        {{ ez_content_name( ngmore_owner( content ) ) }}
                    {% endif %}
                </span>
                <span class="date">{{ ez_field_value( content, 'publish_date' ).value|date( 'j. n. Y.' ) }}</span>
            </div>

        </div>
    </div>
{% endblock %}
