{% set content_name = content_name|default( ez_content_name( content ) ) %}
{% set field_name = field_name|default( 'image' ) %}
{% set use_lazy_load = use_lazy_load|default( false ) %}
{% set alias_name = alias_name|default( 'original' ) %}

{% set image_alias = ez_image_alias( ngmore_field( content, field_name ), content.versionInfo, alias_name ) %}

{% if use_lazy_load %}
    {{ ez_render_field(
        content,
        field_name, {
            parameters: {
                alt_text: content_name,
                disable_src_attribute: true
            },
            attr: {
                class: 'swiper-lazy',
                'data-src': asset( image_alias.uri )
            }
        }
    ) }}
{% else %}
    {{ ez_render_field(
        content,
        field_name, {
            parameters: {
                alias: alias_name,
                alt_text: content_name
            }
        }
    ) }}
{% endif %}
