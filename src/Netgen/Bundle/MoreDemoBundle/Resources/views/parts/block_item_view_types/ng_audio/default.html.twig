{# ng_audio - block_item default view type #}

{% set location_path = path( 'ez_urlalias', { 'locationId': location is defined ? location.id : content.contentInfo.mainLocationId } ) %}

<div class="content-view-block-item ng-audio">

    {% if not ez_is_field_empty( content, 'image' ) %}
        <div class="att-image">
            {{ ez_render_field( content, 'image' ) }}
        </div>
    {% endif %}

    <h2 class="att-title"><a href="{{ location_path }}">{{ ez_content_name( content ) }}</a></h2>

</div>
