{# image - block_item default view type #}

{% set image_field = content.getField( 'image' ) %}
{% set image_alias = ez_image_alias( image_field, content.versionInfo, alias_name|default( 'original' ) ) %}

<div class="content-view-block-item image">
    <img src="{{ image_alias.uri }}" alt="{{ ez_content_name( content ) }}" />
</div>
