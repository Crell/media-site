{# ng_article - block_item campaign view type #}

{% set image_field = content.getField( 'image' ) %}
{% set image_alias = ez_image_alias( image_field, content.versionInfo, alias_name|default( 'original' ) ) %}
{% set content_name = ez_content_name( content ) %}
{% set location_path = path( 'ez_urlalias', { 'locationId': location is defined ? location.id : content.contentInfo.mainLocationId } ) %}

<div class="rsContent">
    <img class="rsImg rsMainSlideImage" src="{{ image_alias.uri }}" alt="{{ content_name }}" />
    <div class="bContainer">
        <div class="rsABlock txtCent">
            <h2><a href={{ location_path }}>{{ content_name }}</a></h2>
            {% if not ez_is_field_empty( content, 'intro' ) %}
                {{ ez_render_field( content, 'intro' ) }}
            {% endif %}
        </div>
    </div>
</div>
