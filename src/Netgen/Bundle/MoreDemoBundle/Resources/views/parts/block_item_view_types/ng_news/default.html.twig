{# ng_news - block_item default view type #}

{% set location_path = path( location ) %}

<div class="content-view-block-item ng-news {{ view_type|default( '' ) }} clearfix">

    {% if not ez_is_field_empty( content, 'line_image' ) %}
        <div class="att-image">
            {{ ez_render_field(
                content,
                'line_image', {
                    'parameters': {
                        'alias': 'ng_image_block_item',
                        'href': location_path,
                        'image_class': 'img-responsive'
                    }
                }
            ) }}
        </div>
    {% elseif not ez_is_field_empty( content, 'image' ) %}
        <div class="att-image">
            {{ ez_render_field(
                content,
                'image', {
                    'parameters': {
                        'alias': 'ng_image_block_item',
                        'href': location_path,
                        'image_class': 'img-responsive'
                    }
                }
            ) }}
        </div>
    {% endif %}

    <div class="att-publish-date">
        {{ ez_field_value( content, 'publish_date' ).value|date( 'j. n. Y.' ) }}
    </div>

    {% if not ez_is_field_empty( content, 'headline' ) %}
        <h3 class="att-headline">{{ ez_render_field( content, 'headline' ) }}</h3>
    {% endif %}

    <h2 class="att-title"><a href="{{ location_path }}">{{ ez_render_field( content, 'title' ) }}</a></h2>

</div>
