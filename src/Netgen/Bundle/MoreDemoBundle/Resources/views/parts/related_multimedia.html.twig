{% set is_slider = false %}

{% if multimedia_items is defined and multimedia_items|length > 0 %}
    {% if multimedia_items|length > 1 %}
        {% set is_slider = true %}
    {% endif %}

    {% if is_slider %}
        <div class="relatedMultimedia swiper-container">
            <div class="swiper-wrapper">
    {% else %}
        <div class="noSlider">
    {% endif %}

    {% for multimedia_item in multimedia_items %}
        {% include
            'NetgenMoreDemoBundle:parts/related_multimedia:' ~ multimedia_item.type ~ '.html.twig'
            ignore missing
            with {
                'content': multimedia_item.content,
                'is_slider': is_slider
            }
        %}
    {% endfor %}

    {% if is_slider %}
            </div>
        </div>

        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    {% else %}
        </div>
    {% endif %}
{% endif %}
