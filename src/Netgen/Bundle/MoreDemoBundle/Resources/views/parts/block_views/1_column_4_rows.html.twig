{% extends 'NetgenMoreDemoBundle:parts/block_views:block_view.html.twig' %}

{% block block_items %}
    {% for valid_item in valid_items|slice( 0, 4 ) %}
        {{ render(
            controller(
                'ez_content:viewLocation', {
                    'locationId': valid_item.locationId,
                    'viewType': 'block_item',
                    'params': {
                        'alias_name': 'contentgrid',
                        'view_type': block.customAttributes.advanced_block_item_viewtype
                    }
                }
            )
        ) }}
    {% endfor %}
{% endblock %}
