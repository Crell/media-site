{# Smart zone #}

<div class="zone-layout-{{ zone_layout|lower }} smart">
    <div class="top-content-block">
        {% if zones[0].blocks is not empty %}
            <section class="zone zone-{{ zones[0].identifier|lower }}">
                {% include 'NetgenMoreBundle:parts:zone_content.html.twig' with { 'zone': zones[0] } %}
            </section>
        {% endif %}
    </div>

    <div class="main-content-block">
        <div class="container">

            {% if zones[1].blocks is not empty %}
                <section class="zone zone-{{ zones[0].identifier|lower }}">
                    {% include 'NetgenMoreBundle:parts:zone_content_smart.html.twig' with { 'zone': zones[1] } %}
                </section>
            {% endif %}

        </div>
    </div>
</div>
