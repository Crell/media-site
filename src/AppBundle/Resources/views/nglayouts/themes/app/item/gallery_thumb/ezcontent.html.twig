{% if ezplatform.configResolver.parameter('render_content_directly', 'ngsite') %}
    {{ ng_view_content(
        item.object.content,
        'gallery_thumb', {
            'params': {
                'nglayouts_item': item,
                'image_type': image_type,
                'show_details': show_details,
                'show_details_on_hover': show_details_on_hover
           }|merge(ezparams|default({}))
        }
    ) }}
{% else %}
    {{ render(
        controller(
            'ng_content:viewAction', {
                'content': item.object.content,
                'location': item.object.mainLocation,
                'viewType': 'gallery_thumb',
                'layout': false,
                'params': {
                    'nglayouts_item': item,
                    'image_type': image_type,
                    'show_details': show_details,
                    'show_details_on_hover': show_details_on_hover
               }|merge(ezparams|default({}))
            }
        )
    ) }}
{% endif %}
