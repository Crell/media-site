{% if ezpublish.configResolver.parameter('render_content_directly', 'ngsite') %}
    {% include '@ezdesign/parts/ng_view_content.html.twig' with {
        object: item.object.content,
        view_type: 'gallery_thumb',
        params: {
            'nglayouts_item': item,
            'image_type': image_type,
            'show_details': show_details,
            'show_details_on_hover': show_details_on_hover
        }|merge(ezparams|default({}))
    } only %}
{% else %}
    {{ render(
        controller(
            'ng_content:viewAction', {
                'content': item.object.content,
                'location': item.object.mainLocation,
                'viewType': 'gallery_thumb',
                'layout': false,
                'params': {
                    'nglayouts_item': item,
                    'image_type': image_type,
                    'show_details': show_details,
                    'show_details_on_hover': show_details_on_hover
               }|merge(ezparams|default({}))
            }
        )
    ) }}
{% endif %}
