{% if ezplatform.configResolver.parameter('render_content_directly', 'ngsite') %}
    {% include '@ezdesign/parts/ng_view_content.html.twig' with {
        object: item.object.content,
        view_type: 'nglayouts_app_preview',
        params: { 'nglayouts_item': item }
    } only %}
{% else %}
    {{ render(
        controller(
            'ng_content:viewAction', {
                'content': item.object.content,
                'location': item.object.mainLocation,
                'viewType': 'nglayouts_app_preview',
                'layout': false,
                'params': {
                    'nglayouts_item': item,
                }
            }
        )
    ) }}
{% endif %}
